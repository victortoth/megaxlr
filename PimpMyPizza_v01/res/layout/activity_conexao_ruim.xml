<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/tvRuim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Deu Ruim" />

    <Button
        android:id="@+id/btnTenteNovamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="Recarregar"
        android:text="Tentar Novamente" />

    <Button
        android:id="@+id/btnVerCardapio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTenteNovamente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="verCardapioClicked"
        android:text="Ver Cardapio" />

</RelativeLayout>