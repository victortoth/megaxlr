<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvNomePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDesc"
        android:layout_margin="2dp"
        android:text="Nome pedido"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="descrição aqui"
        android:textSize="13dp" />

    <!--
    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDesc"
        android:layout_toRightOf="@+id/btnFavoritar"
        android:text="X"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnFavoritar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDesc"
        android:layout_below="@+id/tvDesc"
        android:text="*"
        android:textSize="10dp" /> -->

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/tvDesc"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/tvDesc"
        android:background="@drawable/save_icon" />

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/tvDesc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/btnSalvar"
        android:background="@drawable/delete_icon" />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/tvDesc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnDeletar"
        android:background="@drawable/config_icon" />

    <TextView
        android:id="@+id/tvPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNomePedido"
        android:layout_alignLeft="@+id/tvNomePedido"
        android:layout_margin="10dp"
        android:text="preço"
        android:textSize="13dp" />

</RelativeLayout>