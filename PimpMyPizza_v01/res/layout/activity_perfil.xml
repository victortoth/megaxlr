<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beta.pimpmypizza_beta.Perfil" >

    <TextView
       	android:id="@+id/tvPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Perfil:" />
    
     <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tvPerfil"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Nome:" />
     
     <Spinner
   		 android:id="@+id/nomes_spinner"
   		 android:layout_width="fill_parent"
   		 android:layout_height="wrap_content" 
   		 android:layout_below="@+id/tvNome"
   		 android:layout_marginTop="5dp" />
     
     
      <View
          	 android:id="@+id/linha"
             android:layout_width="fill_parent"
             android:layout_height="2dp"
             android:layout_below="@+id/nomes_spinner"
             android:layout_marginTop="20dp"
             android:background="#c0c0c0"/>
      
       <TextView
       	android:id="@+id/tvConfiguracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linha"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Configurações: " />
       
       <TextView
       	android:id="@+id/tvPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvConfiguracao"
        android:textSize="14dp"
        android:text="Deseja que a aplicação pegue sua localização e número de telefone automaticamente?" />
       
       <Switch
        android:id="@+id/localizacaoSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPergunta"
        android:layout_marginTop="20dp"
        android:text="Localização" />
      

</RelativeLayout>
