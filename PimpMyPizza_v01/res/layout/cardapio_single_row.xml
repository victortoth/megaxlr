<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvNomePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Nome pedido"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNomePedido"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tvPreco"
        android:layout_margin="2dp"
        android:text="descrição aqui"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDesc"
        android:layout_alignBottom="@+id/tvDesc"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="preço"
        android:textSize="13dp" /> 

</RelativeLayout>